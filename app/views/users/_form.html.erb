
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> <%= t(:user_error_msg) %></h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p><%= f.label :nick %><br />
  <%= f.text_field :nick %></p>

  <p><%= f.label :email %><br />
  <%= f.email_field :email %></p>

  <% if action_name == "new" %>
    <p><%= f.label :password, t(:new_password) %><br />
    <%= f.password_field :password %></p>

    <p><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %></p>
  <% end %>


    <%= radio_button("user","roles_mask",1) %><%=f.label :Admin    %><br/>
    <%= radio_button("user","roles_mask",2) %><%=f.label :Moderator%><br/>
    <%= radio_button("user","roles_mask",4) %><%=f.label :User     %><br/>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>